<div class="component-four-top-selling-category">
    <h3 class="section-heading ">Men Collection</h3>
    <div class="container">
        <div class="product-list">
            <% if (products && products.length> 0) { %>
                <% products.forEach(product=> { %>
                    <div class="product-card">
                        <figure class="card-banner">
                            <img src="<%= product.image %>" width="312" height="350" loading="lazy"
                                alt="<%= product.name %>" class="image-contain">
                            <div class="card-badge">New</div>
                            <ul class="card-action-list">
                                <li class="card-action-item">
                                    <button class="card-action-btn" aria-labelledby="card-label-1">
                                        <img src="/Assets/cart.svg" alt="">
                                    </button>
                                    <div class="card-action-tooltip" id="card-label-1">Add to Cart</div>
                                </li>
                                <li class="card-action-item">
                                    <button class="card-action-btn" aria-labelledby="card-label-2">
                                        <img src="/Assets/heart.svg" alt="">
                                    </button>
                                    <div class="card-action-tooltip" id="card-label-2">Add to Wishlist</div>
                                </li>
                            </ul>
                        </figure>
                        <div class="card-content">
                            <h3 class="card-title">
                                <a href="#" id="p-name">
                                    <%= product.name %>
                                </a>
                            </h3>
                            <data class="card-price" value="<%= product.price %>">Rs <%= product.price %></data>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No products found.</p>
                            <% } %>
        </div>
    </div>
</div>



<style>
    .component-four-top-selling-category {
        margin-top: 120px !important;
        margin-bottom: 90px !important;
    }
</style>